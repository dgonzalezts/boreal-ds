{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
